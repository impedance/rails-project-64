
<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th>actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to t('edit'), edit_post_path(post) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

